
@{
    ViewBag.Title = "Get Started - Routing";
}

<h2>@ViewBag.Title</h2>

<div ng-app="githubViewer">


    <div ng-controller="MainController">

        <h2>{{message}}</h2>
        {{countDown | number}}
        <form name="searchUsers" data-ng-submit="search(username)">
            <input type="search" placeholder="Username to find" data-ng-model="username" required />
            <input type="submit" value="Search" />
        </form>

        <div id="userDetails">

            <div>Name : {{user.name}}</div>
            <div>Location : {{user.location}}</div>
            <div ng-show="user">
                <img ng-src="{{user.avatar_url}}" alt="" height="100" width="100" />
            </div>

            <select ng-model="repoSortOrder">
                <option value="+name">Name</option>
                <option value="-stargazers_count">Stars</option>
                <option value="+language">Language</option>
            </select>

            <table class="table table-responsive table-bordered table-condensed table-striped" ng-hide="!user">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Stars</th>
                        <th>Language</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="repo in repos | orderBy: repoSortOrder">
                        <td>{{repo.name}}</td>
                        <td>{{repo.stargazers_count | number}}</td>
                        <td>{{repo.language}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>

@section FooterScripts
{
    @*<script src="~/Scripts/App/patterns.js"></script>*@
    <script src="~/Scripts/App/GetStartet/app.js"></script>
    <script src="~/Scripts/App/GetStartet/mainController.js"></script>
    <script src="~/Scripts/App/GetStartet/github.js"></script>
}

